<%= form_for(@post, url: posts_path) do |f| %>
<div class="form-row">
  <div class="form-group col-8 offset-2">
    <%= f.hidden_field :user_id, value: current_user.id, class: "form-control" %>
  </div>
  <div class="form-group col-8 offset-2">
    <%= f.text_field :title, placeholder: "Title of your post", class: "form-control" %>
  </div>
  <div class="col-8 offset-2 text-left error-message">
    <% if @post.errors[:title] %>
      <% @post.errors[:title].each do |t| %>
        <i class="fa fa-exclamation-circle"></i>&nbsp;Title:&nbsp;<%= t.to_s.capitalize %><br/>
      <% end %>
    <% end %>
  </div>
  <div class="form-group col-8 offset-2">
    <%= f.text_area :content, placeholder: "Content of your post", class: "form-control" %>
  </div>
  <div class="col-8 offset-2 text-left error-message">
    <% if @post.errors[:content] %>
      <% @post.errors[:content].each do |t| %>
        <i class="fa fa-exclamation-circle"></i>&nbsp;Content:&nbsp;<%= t.to_s.capitalize %><br/>
      <% end %>
    <% end %>
  </div>
  <div class="form-group col-8 offset-2">
    <%= f.submit "Post", class: "btn btn-danger text-uppercase form-control"%>
  </div>
</div>
<% end %>
<script type="text/javascript">
  $('.error-message').css('color','red').delay(3000).fadeOut('slow');
</script>
