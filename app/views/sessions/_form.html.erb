<%= form_for(:session, url: login_path) do |f|  %>
<div class="form-row">
  <div class="form-group col-6 offset-3 col-xs-6 offset-xl-3 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4">
    <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
  </div>
  <div class="form-group col-6 offset-3 col-xs-6 offset-xl-3 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4">
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>
  <div class="form-group col-6 offset-3 col-xs-6 offset-xl-3 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4">
    <%= f.submit "Sign in", class: "btn btn-danger text-uppercase btn-lg"%>
  </div>
</div>
<% end %>
