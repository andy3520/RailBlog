<% if @error.nil? %>
  cmt = $('#comment_num_<%= @comment.id %>').find('.comment-content');
  cmt.html('<%= @comment.cmt %>');
  pic = $('#comment_num_<%= @comment.id %>').find('.pictures-render-comment');
  pic.empty();
  pic.html('<%= j(render partial: 'all_pic', locals: { comment: @comment }) %>');
  $('#editPostModal').modal('hide');
  $('.cmt-error').html("").appendTo(".cmt-error");
<% else %>
  <% if @comment.errors[:cmt] %>
    $('.cmt-error').html("<% @comment.errors[:cmt].each do |t| %> <i class='fa fa-exclamation-circle'></i>&nbsp;<%= t.to_s.capitalize %><br/><% end %>").css('color','red').appendTo('.cmt-error');
  <% else %>
    $('.cmt-error').html("").appendTo('.cmt-error');
  <% end %>
<% end %>
